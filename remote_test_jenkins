pipeline {
    agent {
        // Only run on dedicated linux slave
        label 'slaveci7'
    }

    stages {
        stage('Hello') {
            steps {
                sh "pwd"
                sh "mkdir rsync_data_original"
                sh "mkdir rsync_data_destination"

                sh "echo 'Dit is test data >> rsync_data_original/test.txt"

                sh "rsync -va rsync_data_original/ rsync_data_destination/"
            }
        }
    }
}
